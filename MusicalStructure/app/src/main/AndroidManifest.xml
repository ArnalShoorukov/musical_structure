<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Now_playing"
            android:label="@string/playing"/>
        <activity android:name=".ListArtists"
            android:label="@string/artist"/>
        <activity android:name=".ListAlbums"
            android:label="@string/album"/>
        <activity android:name=".Store"
            android:label="@string/store" />
        <activity android:name=".Search"
            android:label="@string/search"></activity>
    </application>

</manifest>